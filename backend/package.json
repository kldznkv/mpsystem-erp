{
  "name": "mpsystem-backend",
  "version": "1.0.0",
  "description": "Backend API for MPSYSTEM - Material Production System",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "migrate": "npx sequelize-cli db:migrate",
    "migrate:undo": "npx sequelize-cli db:migrate:undo",
    "seed": "npx sequelize-cli db:seed:all",
    "db:reset": "npx sequelize-cli db:drop && npx sequelize-cli db:create && npm run migrate && npm run seed"
  },
  "keywords": [
    "manufacturing",
    "production",
    "materials",
    "erp",
    "api",
    "express"
  ],
  "author": "MPSYSTEM Development Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "morgan": "^1.10.0",
    "express-rate-limit": "^6.8.1",
    "dotenv": "^16.3.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.1",
    "joi": "^17.9.2",
    "sequelize": "^6.32.1",
    "sqlite3": "^5.1.6",
    "pg": "^8.11.1",
    "mysql2": "^3.5.2",
    "redis": "^4.6.7",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.32.1",
    "nodemailer": "^6.9.3",
    "cron": "^2.3.1",
    "winston": "^3.9.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.6.1",
    "supertest": "^6.3.3",
    "eslint": "^8.44.0",
    "eslint-config-node": "^4.1.0",
    "sequelize-cli": "^6.6.1"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kldznkv/mpsystem-erp.git"
  },
  "bugs": {
    "url": "https://github.com/kldznkv/mpsystem-erp/issues"
  },
  "homepage": "https://github.com/kldznkv/mpsystem-erp#readme"
}