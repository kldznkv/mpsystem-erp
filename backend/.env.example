# MPSYSTEM Backend Environment Variables
# Copy this file to .env and update values for your environment

# Application Settings
ENVIRONMENT=development
DEBUG=true
SECRET_KEY=your-secret-key-here

# Database Configuration
# For development (SQLite)
DATABASE_URL=sqlite:///./mpsystem.db

# For production (PostgreSQL on Render)
# DATABASE_URL=postgresql://user:password@host:port/database

# Database Pool Settings (PostgreSQL only)
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30

# CORS Configuration
# For development
CORS_ORIGINS=http://localhost:3000,http://localhost:8080,https://kldznkv.github.io

# For production
# CORS_ORIGINS=https://kldznkv.github.io,https://mpsystem-backend.onrender.com

# Server Configuration
PORT=8000
LOG_LEVEL=INFO

# Render.com specific (automatically set by Render)
# PORT=10000
# WEB_CONCURRENCY=1