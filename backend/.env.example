# ===== MPSYSTEM Backend Environment Variables =====

# App Configuration
PROJECT_NAME=MPSYSTEM
VERSION=1.0.0
API_V1_STR=/api/v1
SECRET_KEY=your-super-secret-key-change-in-production-minimum-32-characters
DEBUG=False
ENVIRONMENT=development

# Server Configuration
SERVER_NAME=MPSYSTEM Backend
SERVER_HOST=http://localhost

# Database Configuration - PostgreSQL (Production)
POSTGRES_SERVER=localhost
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-database-password
POSTGRES_DB=mpsystem
POSTGRES_PORT=5432
DATABASE_URL=postgresql://postgres:your-database-password@localhost:5432/mpsystem

# Database Configuration - SQLite (Development fallback)
# If DATABASE_URL is not set, SQLite will be used automatically
# SQLITE_URL=sqlite:///./mpsystem.db

# CORS Origins (comma-separated)
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:8000,http://localhost:8080,https://kldznkv.github.io

# JWT Configuration
ACCESS_TOKEN_EXPIRE_MINUTES=11520
ALGORITHM=HS256

# First Superuser (for initial setup)
FIRST_SUPERUSER=admin@mpsystem.com
FIRST_SUPERUSER_PASSWORD=change-this-password

# Email Configuration (Optional)
SMTP_TLS=True
SMTP_PORT=587
SMTP_HOST=smtp.gmail.com
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAILS_FROM_EMAIL=noreply@mpsystem.com
EMAILS_FROM_NAME=MPSYSTEM

# Redis Configuration (for caching)
REDIS_URL=redis://localhost:6379

# File Upload Configuration
MAX_UPLOAD_SIZE=10485760

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Production Settings
# ENVIRONMENT=production
# DEBUG=False
# DATABASE_URL=postgresql://user:password@db:5432/mpsystem
# SECRET_KEY=your-production-secret-key
# FIRST_SUPERUSER_PASSWORD=strong-production-password

# Docker Configuration (when using docker-compose)
# POSTGRES_SERVER=db
# REDIS_URL=redis://redis:6379

# Monitoring (Optional)
# SENTRY_DSN=https://your-sentry-dsn
# PROMETHEUS_MULTIPROC_DIR=/tmp