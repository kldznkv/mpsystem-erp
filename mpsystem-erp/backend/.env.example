# Server Configuration
NODE_ENV=development
PORT=3000
HOST=localhost

# Database Configuration
DB_TYPE=mongodb
DB_HOST=localhost
DB_PORT=27017
DB_NAME=mpsystem_erp
DB_USER=
DB_PASSWORD=
DB_URL=mongodb://localhost:27017/mpsystem_erp

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h
BCRYPT_ROUNDS=10

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-email-password
EMAIL_FROM=MP System ERP <noreply@mpsystem.com>

# File Storage
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx,xlsx

# API Configuration
API_RATE_LIMIT=100
API_RATE_WINDOW=15

# Security
CORS_ORIGIN=http://localhost:3000
COOKIE_SECRET=your-cookie-secret-key

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# External Services
BACKUP_SCHEDULE=0 2 * * *
CLEANUP_SCHEDULE=0 3 * * 0

# Development Only
DEBUG=true
MOCK_DATA=true